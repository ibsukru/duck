{
  "name": "duck",
  "version": "1.0.0",
  "description": "Mutation.app monorepo (▀̿Ĺ̯▀̿ ̿)",
  "main": "index.js",
  "repository": "git@github.com:mutationapp/duck.git",
  "author": "ibsukru",
  "license": "Apache-2.0",
  "private": "true",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint 'packages/**/*.{ts,tsx,js,jsx}'",
    "lint:fix": "yarn lint --fix",
    "cwd": "yarn --cwd",
    "cwd:web": "yarn cwd packages/duck.web",
    "dev": "yarn cwd:web dev",
    "clean:dist": "rm -rf packages/**/dist*",
    "build": "yarn clean:dist && lerna run build",
    "compile": "tsc --noEmit",
    "stryker": "stryker run",
    "test": "lerna run test -- -u",
    "mutate": "mutate"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/plugin-syntax-jsx": "^7.10.4",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.1",
    "@mutationapp/mutate": "^1.0.3",
    "@stryker-mutator/core": "^3.3.0",
    "@stryker-mutator/jest-runner": "^3.3.0",
    "@stryker-mutator/typescript": "^3.3.0",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.9",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.3",
    "enzyme-to-json": "^3.5.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn compile"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint:fix",
      "git add"
    ]
  }
}
